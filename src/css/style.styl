@require 'nib'
@require 'jeet'

global-reset()

better-font()
  -webkit-text-size-adjust: 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  text-rendering: optimizeLegibility
  font-feature-settings: 'liga', 'kern'
  font-family: 'HelveticaNeue-Light', 'Helvetica Neue Light', 'Helvetica Neue', Arial, Helvetica, sans-serif
  font-weight: 300

html, body
  width: 100%
  height: 100%

body
  better-font()
  background: linear-gradient(
    45deg,
    black 0,
    black 50%,
    white 50%,
    white
  )
  background-size: 20px 20px
  background-attachment: fixed

// remove for perf
*
  box-sizing: border-box

.application
  padding: 20px
  padding-bottom: 400px

.message-wall
  center()

  .chat-message
    overflow: hidden
    margin-bottom: 10px
    border: 6px dashed yellow

    @media (min-width: 768px)
      column(1/4, cycle: 4, gutter: .5)

    @media (max-width: 768px)
      column(1/2, cycle: 2, gutter: .5)

    @media (max-width: 450px)
      column(1/1, cycle: 1, gutter: 0)

    .chat-message-video
      display: block
      width: 100%
      min-height: 100px

    .chat-message-text
      display: inline-block
      text-align: center
      background-color: #fff
      padding: 5px
      min-height: 26px
      width: 100%
      color: #000

.title-text
  font-family: 'Mr Dafoe', cursive
  font-size: 6rem
  text-align: center
  color: magenta
  text-shadow: 4px 4px 4px yellow

.bottom-bar
  z-index: 10
  position: relative
  fixed: bottom left
  width: 100%

  .bottom-bar-selfie
    max-height: 300px
    background-color: #000
    border: 3px dashed red

    @media (min-width: 768px)
      span(1/4)

    @media (max-width: 768px)
      span(1/2)

  .bottom-bar-text
    better-font()
    absolute: bottom right
    border: none
    outline: none
    font-size: 1.25rem
    padding: 6px
    padding-left: 15px
    color: #333
    background-color: #fff
  
    @media (min-width: 768px)
      span(3/4)

    @media (max-width: 768px)
      span(1/2)