@require 'nib'
@require 'jeet'

global-reset()

thefont()
  font-family: 'HelveticaNeue-Light', 'Helvetica Neue Light', 'Helvetica Neue', Helvetica, Arial, 'Lucida Grande', sans-serif
  font-weight: 300
  -webkit-text-size-adjust: 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  text-rendering: optimizeLegibility
  font-feature-settings: 'liga', 'kern'

html, body
  thefont()
  width: 100%
  height: 100%
  color: #fff
  background-color: #333

// remove for perf
*
  box-sizing: border-box

.message-wall
  center()

.chat-message
  overflow: hidden
  position: relative
  display: inline-block
  margin: 10px
  width: 300px

  .chat-message-video
    display: block
    width: 100%
    border-top-left-radius: 3px
    border-top-right-radius: 3px

  .chat-message-text
    display: inline-block
    text-align: center
    color: #fff
    padding: 3px
    width: 100%
    background-color: #000
    border-bottom-left-radius: 3px
    border-bottom-right-radius: 3px

// TODO: make the size of the camera the same as the grid vid size
.bottom-bar
  z-index: 10
  position: relative
  fixed: bottom left
  width: 100%

  .bottom-bar-selfie
    span(1/3)
    max-height: 25vh
    background-color: #000

  .bottom-bar-text
    thefont()
    span(2/3)
    absolute: bottom right
    border: none
    outline: none
    font-size: 1.25em
    padding: 6px
    color: #000
    background-color: #fff